generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id        String   @id @default(uuid())
  amount    Float
  type      String   // "income" or "expense"
  category    String
  description String
  date        DateTime
  createdAt DateTime @default(now())
}
